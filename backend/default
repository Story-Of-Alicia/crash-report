upstream php-fpm {
        server unix:/run/php/www.sock;
}

server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    root /var/www;
    server_name _;

    location / {
	      try_files $uri /index.php$is_args$args;
    }

    location ~ \.php {
	      fastcgi_split_path_info ^(.+\.php)(/.+)$;
	      fastcgi_pass php-fpm; 
	      fastcgi_index index.php;
	      include fastcgi.conf;
    }

}
